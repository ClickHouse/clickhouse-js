{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "noEmitOnError": true,
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "importHelpers": false,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@clickhouse/client-common": ["packages/client-common/src/index.ts"],
      "@clickhouse/client-common/*": ["packages/client-common/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./packages/**/*.ts"]
}
