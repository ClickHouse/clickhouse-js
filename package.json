{
  "name": "clickhouse-js",
  "version": "0.0.1",
  "description": "The official js client for the ClickHouse DB",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist; webpack --mode=development",
    "compile": "tsc --project tsconfig.eslint.json --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "mocha __tests__/**/*.test.ts --exit",
    "test:unit": "mocha __tests__/unit/**/*.test.ts --exit",
    "test:integration": "mocha __tests__/integration/**/*.test.ts --exit",
    "test:integration:local_cluster": "CLICKHOUSE_TEST_ENVIRONMENT=local_cluster mocha __tests__/integration/**/*.test.ts --exit",
    "test:integration:cloud": "CLICKHOUSE_TEST_ENVIRONMENT=cloud mocha __tests__/integration/**/*.test.ts --exit",
    "test:browser": "karma start",
    "test:all": "npm run test --exit; npm run test:browser --exit",
    "prepare": "husky install"
  },
  "author": {
    "name": "Mikhail Shustov",
    "company": "ClickHouse, Inc"
  },
  "license": "Apache-2.0",
  "keywords": [
    "clickhouse",
    "sql",
    "client"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "node-abort-controller": "^3.0.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "split2": "^4.1.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tslib": "^2.4.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.22",
    "@types/sinon": "^10.0.13",
    "@types/split2": "^3.2.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect": "^28.1.3",
    "karma": "^6.4.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "2.7.1",
    "sinon": "^14.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "husky": "^7.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
